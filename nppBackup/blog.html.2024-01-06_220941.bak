<script>
	fetch('title-cards.html')
  .then(res => res.text())
  .then(html => {
    document.getElementsByClassName('title-cards-container')[0].innerHTML = html; 
  });

 </script>


<script>

    // Call the sortTitleCards function when the page finishes loading
    window.addEventListener("load", sortTitleCards);


  function filterByTag(tag) {

  // Get all the title cards
  const titleCards = document.getElementsByClassName('title-card');

  // Hide all title cards first
  for (let i = 0; i < titleCards.length; i++) {
    titleCards[i].style.display = 'none'; 
  }

  // Show title cards with matching tags
  for (let i = 0; i < titleCards.length; i++) {
    
    const titleCard = titleCards[i];
    const tags = titleCard.getElementsByClassName('tag');
    
    let showCard = false;
    
    for (let j = 0; j < tags.length; j++) {
      if (tag === 'all' || tags[j].innerText.toLowerCase().includes('#' + tag.toLowerCase())) {
        showCard = true;
        break;  
      }
    }
    
    titleCard.style.display = showCard ? 'flex' : 'none';

  }

  // Hide all separators first
  const separators = document.querySelectorAll('.separator');
  separators.forEach(function(sep) {
    sep.style.display = 'none';
  });

  // Show relevant separators
  const visibleCards = document.querySelectorAll('.title-card:not([style*="display: none"])');
  visibleCards.forEach(function(card) {
    let prev = card.previousElementSibling;
    if (prev && prev.classList.contains('separator')) {
      prev.style.display = 'block'; 
    }
  });
  
}
</script>

<!-- Search bar functionality -->
<script>
  function search() {
    const searchInput = document.getElementById('search-input');
    const searchText = searchInput.value.toLowerCase();
    
    // Get all the title cards
    const titleCards = document.getElementsByClassName('title-card');
    
    // Loop through each title card and check if it matches the search text
    for (let i = 0; i < titleCards.length; i++) {
      const titleCard = titleCards[i];
      const title = titleCard.getElementsByTagName('h2')[0].innerText.toLowerCase();
      
      // If the title contains the search text, display the title card, otherwise hide it
      if (title.includes(searchText)) {
        titleCard.style.display = 'flex'; // Set display to flex
      } else {
        titleCard.style.display = 'none'; // Hide the title card
      }
    }
  }
</script>

<!-- Scroll to top button -->
<script>
  function scrollToTop() {
    window.scrollTo({ top: 0, behavior: 'smooth' });
  }
</script>

	
