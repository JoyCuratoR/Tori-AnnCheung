	/* Tag outline style */
		.tag {
		  display: inline-block;
		  padding: 6px 12px;
		  border: 1px solid #439775;
		  border-radius: 20px;
		  margin-right: 5px;
		}
		
	/* Nav bar */
		.navbar {
	  background-color: #439775;
	  overflow: hidden;
	  text-align: center; /* Center the navigation links */
	  display: flex; /* Add flex display */
	  justify-content: center; /* Center the items horizontally */
	}

	.navbar a {
	  display: inline-block;
	  color: black;
	  text-align: center;
	  padding: 14px 16px;
	  text-decoration: none;
	  font-weight: bold;
	  transition: background-color 0.3s;
	}

	.navbar a:hover {
	  background-color: #55a6a2;
	  color: white;
	}
	
	
		
/* Add styling for title cards */
        .title-card {
            background-color: #FFFFFF;
            padding: 20px;
            margin-bottom: 10px;
