body {
  margin: 0;
  padding: 0;
  font-family: Nunito, sans-serif;
  box-sizing: border-box;
}
/* Add the CSS for the scroll to top arrow */
    .scroll-to-top {
      position: fixed;
      bottom: 20px; /* Adjust the distance from the bottom as needed */
      right: 20px; /* Adjust the distance from the right as needed */
      width: 40px;
      height: 40px;
      background-color: #55a6a2;
      color: white;
      border-radius: 50%;
      text-align: center;
      line-height: 40px;
      cursor: pointer;
    }
	

    /* Add any styling you want for the navigation bar */
    .navbar {
      background-color: #439775;
      overflow: hidden;
      text-align: center; /* Center the navigation links */
    }

    /* Style the navigation bar links */
    .navbar a {
      display: inline-block; /* Display links in a row */
      color: black;
      text-align: center;
      padding: 14px 16px;
      text-decoration: none;
      font-weight: bold; /* Make the font bold */
      transition: background-color 0.3s; /* Add transition for hover effect */
    }

    /* Style the navigation bar links when hovered */
    .navbar a:hover {
      background-color: #55a6a2; /* Change background color on hover */
      color: white; /* Change text color on hover */
    }


@media (max-width: 768px) {

  .page-section {
    flex-direction: column;
  }
  
  .left-content,
  .right-content {
    width: 100%;
  }

  .content-boxes {
    flex-direction: column;  
  }
  
  .content-box {
    width: 100%;
  }

  .layout-70-30 {
    flex-direction: column;
  }

  .left-side, 
  .right-side {
    width: 100%;
  }

}
	


.page-section {
  width: 100%;
  height: 100vh;
  display: flex;
}


#first-section {
  display: flex;
  flex-direction: row;
  background-color: #1DCD8D;
}

.left-content {
  width: 30%;
  padding: 75px;
  display: flex;
  flex-direction: column;
}

.text-box {
  margin-bottom: 5px;
  padding: 10px;
  position: relative; /* Create a positioning context for the pseudo-element */
}

.text-box h4 {
  font-weight: bold;
  color: white;
  margin-top: 0; /* Add top margin of 0 */
  margin-bottom: 0; /* Add bottom margin of 0 */
}

.text-box h4::before {
  content: "";
  position: absolute;
  top: 50%;
  left: -15px; /* Adjust the position of the line relative to the h5 text */
  width: 6px; /* Adjust the width of the line as needed */
  height: 100%; /* Make the line span the full height of the text box */
  background-color: black;
  border-radius: 5px; /* Make the line rounded */
  transform: translateY(-50%); /* Center the line vertically */
}

.text-box h1 {
  font-weight: bold;
  color: white;
  font-size: 65px; /* Increase the font size of the h1 tags as desired */
  margin-top: 0; /* Add top margin of 0 */
  margin-bottom: 0; /* Add bottom margin of 0 */
}

.text-box p {
  color: white;
  font-size: 25px;
}

.right-content {
  width: 70%;
  padding: 20px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.learn-more-button {
  display: block;
  background-color: #1A2529;
  color: white;
  text-decoration: none;
  padding: 15px 20px;
  border-radius: 50px;
  font-family: Nunito, sans-serif;
  font-weight: bold;
}



#second-section {
  background-color: #F4F4F4;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 100vh;
}

.centered-content {
  text-align: center;
  padding: 50px; /* Add padding all around to center the text box */
  flex: 1; /* Allow the content to expand to fill the available space */
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center; /* Center the content horizontally */
}

.centered-content h2 {
  font-family: Nunito, sans-serif;
  font-size: 35px;
  font-weight: bold;
  margin: 0; /* Remove the default margin to avoid extra space */
}

.animated-image {
  /* Add your styles for the animated image here */
}



#third-section {
  background-color: #1A2529;
}

.header-text-box {
  background-color: #1A2529;
  color: #1DCD8D;
  font-family: Nunito, sans-serif; 
  font-weight: bold;
  padding: 20px;
  text-align: center;
  margin-bottom: 20px
}

.content-boxes {
  display: flex;
  justify-content: space-between;
}

.content-box {
  background-color: #263237;
  border-radius: 10px;
  padding: 20px;
  width: 30%; 
}

.content-box h3 {
  color: #1DCD8D;
  font-family: Nunito, sans-serif;
  font-weight: bold;
}

.content-box p {
  color: #fff;
  font-family: Nunito, sans-serif;
}

.content-box li {
	color: #fff;
	font-family: Nunito, sans-serif;
}



#fourth-section {

background-color: #CDF3E5;

display: flex;

justify-content: space-between;

}

.section-container {

flex: 1; /* Take half of the space */

}

.rounded-box {

background-color: white;

color: black;

border-radius: 20px;

padding: 20px;

width: 50%;

height: auto;

}

.rounded-box img {

max-width: 150px;

margin-bottom: 10px;

}

.box-content h3 {

font-family: Nunito, sans-serif;

font-weight: bold;

}



#fifth-section {
  background-color: black;
  display: flex;
  padding: 50px 0;
}

.section-container {
  flex: 1; /* Take half of the space */
  padding: 20px;
}

.layout-70-30 {
  display: flex;
  justify-content: space-between;
}

.left-side {
  flex: 70%; /* Take 70% of the space */
  color: white;
}

.right-side {
  flex: 30%; /* Take 30% of the space */
  padding-left: 20px; /* Add space on the left side of the right-side content */
  color: white;
}

.text-box {
  padding: 20px;
}

.text-box h2 {
  font-family: Nunito, sans-serif;
  font-weight: bold;
}

.text-box h3 {
  font-family: Nunito, sans-serif;
  font-weight: bold;
  margin-bottom: 10px;
}

/* Additional styles for the specific text boxes */
.contact-box {
  background-color: #1DCD8D;
}

.email-box {
  background-color: #1A2529;
  margin-top: 20px;
}

.social-box {
  background-color: #1A2529;
  margin-top: 20px;
}

