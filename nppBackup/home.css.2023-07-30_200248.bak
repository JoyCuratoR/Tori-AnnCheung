body {
  margin: 0;
  padding: 0;
  font-family: Nunito, sans-serif;
  box-sizing: border-box;
}
/* Add the CSS for the scroll to top arrow */
    .scroll-to-top {
      position: fixed;
      bottom: 20px; /* Adjust the distance from the bottom as needed */
      right: 20px; /* Adjust the distance from the right as needed */
      width: 40px;
      height: 40px;
      background-color: #55a6a2;
      color: white;
      border-radius: 50%;
      text-align: center;
      line-height: 40px;
      cursor: pointer;
    }
	

    /* Add any styling you want for the navigation bar */
    .navbar {
      background-color: #439775;
      overflow: hidden;
      text-align: center; /* Center the navigation links */
    }

    /* Style the navigation bar links */
    .navbar a {
      display: inline-block; /* Display links in a row */
      color: black;
      text-align: center;
      padding: 14px 16px;
      text-decoration: none;
      font-weight: bold; /* Make the font bold */
      transition: background-color 0.3s; /* Add transition for hover effect */
    }

    /* Style the navigation bar links when hovered */
    .navbar a:hover {
      background-color: #55a6a2; /* Change background color on hover */
      color: white; /* Change text color on hover */
    }


    /* Media query for mobile devices */
    @media (max-width: 600px) {
      body {
        margin-left: 20px;
      }
    }
	
	

.page-section {
  width: 100%;
  height: 100vh;
  display: flex;
}


#first-section {
  display: flex;
  flex-direction: row;
  background-color: #1DCD8D;
}

.left-content {
  width: 30%;
  padding: 50px;
  display: flex;
  flex-direction: column;
}

.text-box {
  margin-bottom: 20px;
  padding: 15px;
  position: relative; /* Create a positioning context for the pseudo-element */
}

.text-box h4 {
  font-weight: bold;
  color: white;
  margin-top: 0; /* Add top margin of 0 */
  margin-bottom: 0; /* Add bottom margin of 0 */
}

.text-box h4::before {
  content: "";
  position: absolute;
  top: 50%;
  left: -15px; /* Adjust the position of the line relative to the h5 text */
  width: 6px; /* Adjust the width of the line as needed */
  height: 100%; /* Make the line span the full height of the text box */
  background-color: black;
  border-radius: 5px; /* Make the line rounded */
  transform: translateY(-50%); /* Center the line vertically */
}

.text-box h1 {
  font-weight: bold;
  color: white;
}

.text-box p {
  color: white;
}

.right-content {
  width: 70%;
  padding: 20px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.learn-more-button {
  display: block;
  background-color: #1A2529;
  color: white;
  text-decoration: none;
  padding: 15px 20px;
  border-radius: 50px;
  font-family: Nunito, sans-serif;
  font-weight: bold;
  margin-top: 20px;
}



#second-section {
  background-color: #F4F4F4;
