body {
  margin: 0;
  padding: 0;
  font-family: Nunito, sans-serif;
  box-sizing: border-box;
}
/* Add the CSS for the scroll to top arrow */
    .scroll-to-top {
      position: fixed;
      bottom: 20px; /* Adjust the distance from the bottom as needed */
      right: 20px; /* Adjust the distance from the right as needed */
      width: 40px;
      height: 40px;
      background-color: #55a6a2;
      color: white;
      border-radius: 50%;
      text-align: center;
      line-height: 40px;
      cursor: pointer;
    }
	

    /* Add any styling you want for the navigation bar */
    .navbar {
      background-color: #439775;
      overflow: hidden;
      text-align: center; /* Center the navigation links */
    }

    /* Style the navigation bar links */
    .navbar a {
      display: inline-block; /* Display links in a row */
      color: black;
      text-align: center;
      padding: 14px 16px;
      text-decoration: none;
      font-weight: bold; /* Make the font bold */
      transition: background-color 0.3s; /* Add transition for hover effect */
    }

    /* Style the navigation bar links when hovered */
    .navbar a:hover {
      background-color: #55a6a2; /* Change background color on hover */
      color: white; /* Change text color on hover */
    }


	


.page-section {
  width: 100%;
  height: 100vh;
  display: flex;
}

/* First Section */
#first-section {
  background-color: #1DCD8D;
  display: flex;
  flex-direction: row;
}

.left-content {
  width: 30%;
  padding: 75px;
  display: flex;
  flex-direction: column;  
}

/* First Section Text Boxes */
.text-box {
  margin-bottom: 5px;
  padding: 10px;
  position: relative;
}

.text-box h4 {
  font-weight: bold;
  color: white;
  margin: 0;
} 

/* Horizontal line */
.text-box h4::before {
  content: "";
  position: absolute;
  top: 50%;
  left: -15px;
  width: 6px;
  height: 100%;
  background-color: black;
  border-radius: 5px; 
  transform: translateY(-50%);
}

.text-box h1 {
  font-weight: bold;
  color: white;
  font-size: 65px;
  margin: 0;
}

.text-box p {
  color: white;
  font-size: 25px; 
}

/* First Section Right Content */
.right-content {
  width: 70%;
  padding: 20px;
  display: flex;
  justify-content: center;
  align-items: center;
} 

.learn-more-button {
  display: block;
  background-color: #1A2529;
  color: white;
  text-decoration: none;
  padding: 15px 20px;
  border-radius: 50px;
  font-family: Nunito, sans-serif;
  font-weight: bold;
}


/* Second Section */
#second-section {
  background-color: #F4F4F4;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 100vh;
}

.centered-content {
  text-align: center;
  padding: 50px;
  flex: 1; 
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.centered-content h2 {
  font-family: Nunito, sans-serif;
  font-size: 35px;
  font-weight: bold;
  margin: 0;
}


/* Third Section */  
#third-section {
  background-color: #1A2529; 
}

.text-box {
  padding: 50px;
  width: 50%;
  color: #1DCD8D;
  font-family: Nunito, sans-serif;
  font-weight: bold;
  font-size: 36px;
}


/* Fourth Section */
#fourth-section {
  background-color: #CDF3E5;
}

.text-box {
  padding: 50px;
  width: 50%;
  color: black;
  font-family: Nunito, sans-serif;
  font-weight: bold;
  font-size: 36px; 
}


/* Fifth Section */
#fifth-section {
  background-color: black;
  display: flex;
  padding: 50px 0; 
}





